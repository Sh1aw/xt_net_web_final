@using Epam.ExtPosterStore.BLL.Ioc
@using Epam.ExtPosterStore.WebPagesPL.Common
@{
    Layout = null;
    if (IsPost)
    {
        if (InputNormalizer.ValidateInt(Request.Form["IdProduct"]))
        {
            var commentLogic = DependencyResolver.CommentLogic;
            var text = Request.Form["TextComment"];
            var idProduct =Int32.Parse(Request.Form["IdProduct"]);
            int response = commentLogic.Add(text, User.Identity.Name, idProduct);
            Response.StatusCode = response;
        }
    }
}

